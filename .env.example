# MangakAI Environment Configuration

# AI API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Database Configuration
DATABASE_URL=postgresql://mangakai:password@localhost:5432/mangakai
# For development, you can use SQLite:
# DATABASE_URL=sqlite:///./mangakai.db

# Redis Configuration (for Celery and caching)
REDIS_URL=redis://localhost:6379/0

# Storage Configuration
STORAGE_TYPE=local  # Options: local, s3, oss
LOCAL_STORAGE_PATH=data/cloud_storage

# AWS S3 Configuration (if using S3 storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-southeast-1
S3_BUCKET=your-s3-bucket-name

# CDN Configuration (optional)
CDN_BASE_URL=https://your-cdn-domain.com

# Application Configuration
ENVIRONMENT=development  # Options: development, production
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# File Paths
TEMPLATE_PATH=data/templates/template.png
OUTPUT_DIR=data/output
STORIES_DIR=data/stories

# AI Model Configuration
IMAGE_MODEL_NAME=gemini-2.5-flash-image-preview
SCENE_MODEL_NAME=gemini-2.0-flash

# Monitoring Configuration (optional)
SENTRY_DSN=your_sentry_dsn_here
PROMETHEUS_ENABLED=true
METRICS_PORT=8001

# Security Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here
FLOWER_BASIC_AUTH=admin:your_flower_password

# Rate Limiting
API_RATE_LIMIT=100  # requests per minute
UPLOAD_RATE_LIMIT=10  # uploads per minute

# Task Configuration
CELERY_TASK_TIMEOUT=600  # 10 minutes
CELERY_SOFT_TIMEOUT=300  # 5 minutes
MAX_PANELS_PER_TASK=100
MAX_STORY_LENGTH=10000

# Development Settings
SQL_DEBUG=false  # Set to true to enable SQL query logging
RELOAD_ON_CHANGE=true  # Auto-reload on code changes (development only)